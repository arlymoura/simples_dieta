<div>
  <h2 class="title">Lista <%= Dietary.model_name.human %></h2>
  <div class="card card card-default scrollspy">
    <div class="card-content">
      <div class="row">
        <div class="col s12">
          <table class="responsive-table table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
            <thead>
              <tr>
                <th data-field="id">#</th>
                <th >Data Inicial</th>
                <th >Data Final</th>
                <th >Peso</th>
                <th >Altura</th>
                <th >Peso Ideal</th>
                <th colspan="3" class="center-align">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @dietaries.each_with_index do |dietary, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= dietary.start_date %></td>
                <td><%= dietary.end_date %></td>
                <td><%= dietary.weight %></td>
                <td><%= dietary.height %></td>
                <td><%= dietary.ideal_weight %></td>
                <td><%= link_to 'Dashboard', dietary, class: "button is-info is-light" %></td>
                <td><%= link_to 'Editar', edit_dietary_path(dietary), class: "button is-warning is-light" %></td>
                <td><%= link_to 'Remover', dietary, method: :delete,
                                  data: { confirm: 'Tem certeza que deseja remover?' },
                                  class: "button is-danger is-light" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="navbar-end spact_buttom_top ">
    <%= link_to "Nova #{Dietary.model_name.human}", new_dietary_path, class: 'button is-success' %>
  </div>
</div>