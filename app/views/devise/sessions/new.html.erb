<h1 class="title is-4">Acessar o Sistema</h1>
<p class="description"><%= render "devise/shared/error_messages", resource: resource %></p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
  <div class="field">
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-medium", placeholder: "Email" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.password_field :password, autocomplete: "current-password", class: "input is-medium", placeholder: "Senha" %>
    </div>
  </div>
    <%= f.submit "Entrar", class: 'button is-block is-primary is-fullwidth is-medium' %>
  <br />
  <small><em><div class="row">
    <%= render "devise/shared/links" %>
  </div></em></small>
<% end %>