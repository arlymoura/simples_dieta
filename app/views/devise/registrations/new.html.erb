<div id="login-page" class="row">

    <div class="col s12 m6 l4 z-depth-4 card-panel border-radius-6 login-card bg-opacity-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="row">
            <div class="input-field col s12">
                <%= render "devise/shared/error_messages", resource: resource %>
            </div>
        </div>
        <h1 class="title">Novo Usuário </h1>

        <div class="field">
            <div class="control">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-medium", placeholder: "Email" %>
            </div>
        </div>

        <div class="field">
            <div class="control">
                <%= f.password_field :password, autocomplete: "new-password", class: "input is-medium", placeholder: "Senha" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> Caracteres Mínimos)</em>
                <% end %>
            </div>
        </div>

        <div class="field">
            <div class="control">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-medium", placeholder: "Confirmar Senha" %>
            </div>
        </div>

        <%= f.submit "Criar", class: 'button is-block is-primary is-fullwidth is-medium' %>

        <br />
        <small>
            <em>
                <div class="row">
                    <%= render "devise/shared/links" %>
                </div>
            </em>
        </small>
        <% end %>
    </div>
</div>